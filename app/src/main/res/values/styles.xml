<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Animation.BottomSheetDialog" parent="Animation.AppCompat.Dialog">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>

    <style name="BottomSheetDialogCustom" parent="Theme.Design.BottomSheetDialog">
        <item name="android:topLeftRadius">0dp</item>
        <item name="android:topRightRadius">0dp</item>
        <item name="android:foregroundTint">#000</item>

        <item name="android:background">#20000000</item>
        <item name="android:windowAnimationStyle">@style/Animation.BottomSheetDialog</item>
    </style>

    <style name="ChildElementStyle">
        <item name="android:background">#FFFFFF</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here -->
        <item name="colorPrimary">#8000FF</item>
        <item name="colorPrimaryDark">#8000FF</item>
        <item name="colorAccent">#8000FF</item>

        <!-- Set the status bar color -->
        <item name="android:statusBarColor">#8000FF</item>
    </style>

    <style name="TopCornerCardview" parent="Widget.MaterialComponents.CardView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">25dp</item>
        <item name="cornerSizeTopLeft">25dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="contentPadding">0dp</item>
    </style>

    <!--    AppTheme.AppBarOverlay-->
    <!-- Define the AppBarOverlay style -->
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <!-- Customize the appearance of the app bar overlay here -->
    </style>

    <!--    TextAppearance.BottomNavigationView.Active-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
    </style>
</resources>