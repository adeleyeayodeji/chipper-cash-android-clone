<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".pages.AddCash">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/header_addcash_page"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="horizontal"
        android:paddingStart="15dp"
        android:paddingTop="15dp"
        android:paddingEnd="15dp"
        android:paddingBottom="15dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/close_icon_addcash_page"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingEnd="30dp"
            android:contentDescription="@string/info_icon"
            android:src="@drawable/arrow_back_ios" />

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="0.27" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:src="@drawable/nigeria_flag_png"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your NGN account"
                android:textColor="#000000"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp"
        app:layout_constraintTop_toBottomOf="@id/header_addcash_page"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/profile_info_addcash_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:id="@+id/amount_text_addcash_page"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:layout_marginBottom="5dp"
                    android:text="Money Transfer sent to this bank account number will automically top up your BiggiDroid Wallet."
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="normal"
                    android:textColor="#000000"
                    android:text="Receive your salary or funds from any bank account locally, directly into your BiggiDroid Wallet."
                    />

            </LinearLayout>

            <!--    Divider-->

            <View
                android:id="@+id/divider_addcash_page"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#1B131313"
                app:layout_constraintTop_toBottomOf="@+id/profile_info_addcash_page" />

            <LinearLayout
                android:id="@+id/account_info_addcash_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/divider_addcash_page"
                app:layout_constraintStart_toStartOf="parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Name"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BiggiDroid / BiggiDroid"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/bg_roundrect_ripple_light_border"
                    app:cardElevation="0dp"
                    app:contentPaddingRight="20dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingTop="5dp"
                    app:contentPaddingBottom="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Copy"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--    Divider-->

            <View
                android:id="@+id/divider_addcash_page2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#1B131313"
                app:layout_constraintTop_toBottomOf="@+id/account_info_addcash_page" />

            <LinearLayout
                android:id="@+id/account_info_addcash_page2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/divider_addcash_page2"
                app:layout_constraintStart_toStartOf="parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Account Number"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1234567890"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/bg_roundrect_ripple_light_border"
                    app:cardElevation="0dp"
                    app:contentPaddingRight="20dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingTop="5dp"
                    app:contentPaddingBottom="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Copy"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>


            <!--    Divider-->

            <View
                android:id="@+id/divider_addcash_page3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#1B131313"
                app:layout_constraintTop_toBottomOf="@+id/account_info_addcash_page2" />

            <LinearLayout
                android:id="@+id/account_info_addcash_page3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toBottomOf="@+id/divider_addcash_page3"
                app:layout_constraintStart_toStartOf="parent"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bank Name"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Access Bank"
                        />

                </LinearLayout>

                <Space
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    />

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:foreground="@drawable/bg_roundrect_ripple_light_border"
                    app:cardElevation="0dp"
                    app:contentPaddingRight="20dp"
                    app:contentPaddingLeft="20dp"
                    app:contentPaddingTop="5dp"
                    app:contentPaddingBottom="7dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="Copy"
                        android:textColor="#000000"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <!--    Divider-->

            <View
                android:id="@+id/divider_addcash_page4"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="20dp"
                android:background="#1B131313"
                app:layout_constraintTop_toBottomOf="@+id/account_info_addcash_page3" />


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="180dp"
            />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Share account details"
                android:textSize="17sp"
                android:textAlignment="center"
                android:background="@drawable/custom_border_darkpurple"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:layout_marginStart="5dp"
                android:layout_weight="2"
                android:radius="17dp"
                />

        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>